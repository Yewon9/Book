      "source": [
        "# 날짜/시간과 관련된 기능을 가져옵니다.\n",
        "import datetime\n",
        "\n",
        "# 현재 날짜/시간을 구합니다.\n",
        "now = datetime.datetime.now()\n",
        "\n",
        "# 오전 구분\n",
        "if now.hour < 12:\n",
        "  print(\"현재 시각은 {}시로 오전입니다!\".format(now.hour))\n",
        "\n",
        "# 오후 구분\n",
        "if now.hour >= 12:\n",
        "  print(\"현재 시각은 {}시로 오후입니다!\".format(now.hour))"
      ]
    }
  ]
